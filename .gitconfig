[user]
  name = Jonas Beutlich
  email = jonas.beutlich@hotmail.de
#  signingkey = 0xAAAAAAAAAAAAAAAAAA
[color]
  branch = auto
  diff = auto
  interactive = auto
  pager = true
  status = auto
  ui = true
[color "status"]
  added = green
  changed = yellow
  untracked = red
[push]
  default = current
  followTags = true
[core]
  autocrlf = input
  pager = less -FRSX
  commentchar = $
[alias]
  ci = commit
  co = checkout
  st = status -sb
  lg = log --graph --pretty=format:'%C(red)%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset' --abbrev-commit --date=relative
[tag]
  sort = version:refname
